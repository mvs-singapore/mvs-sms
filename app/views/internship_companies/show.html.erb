<div class="container">
  <div class="row">
    <div class="col-3">
      <h3><%= @resource.name %></h3>
    </div>
    <div class="col-9 text-right">
      <%= link_to 'Edit', edit_internship_company_path(@resource), class: "edit_internship_comapny btn btn-primary" %>
      <%= link_to 'Delete', internship_company_path(@resource), method: :delete, data: {confirm: 'Are you sure?'}, class: "delete_internship_company btn btn-danger" %>
    </div>
  </div>

  <h5>Company Details</h5>
  <dl class="row">
    <dt class="col-3">Address</dt>
    <dd class="col-9" data-for="address"><%= @resource.address %></dd>

    <dt class="col-3">Postal Code</dt>
    <dd class="col-9" data-for="postal_code"><%= @resource.postal_code %></dd>

  </dl>

<h4>Supervisor List</h4>
<table class="table table-bordered table-responsive">
  <thead class="table-primary">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Contact Number</th>
    </tr>
  </thead>
  <tbody class="bg-white">
        <% @resource.internship_supervisors.each do |supervisor| %>
          <tr id="supervisor-<%= supervisor.id %>">
            <td><%= supervisor.name %></td>
            <td><%= supervisor.email %></td>
            <td><%= supervisor.contact_number %></td>
          </tr>
        <% end %>
      </tbody>
</table>

<h4>Students Assigned List</h4>
<table class="table table-bordered table-responsive">
  <thead class="table-primary">
    <tr>
      <th>Student Name</th>
      <th>Supervisor Name</th>
      <th>From Date</th>
      <th>To Date</th>
    </tr>
  </thead>
  <tbody class="bg-white">
        <% @resource.internship_records.each do |record| %>
          <tr id="student-<%= record.student.id %>">
            <td><%= record.student.full_name %></td>
            <td><%= record.internship_supervisor.name %></td>
            <td><%= record.from_date %></td>
            <td><%= record.to_date %></td>
          </tr>
        <% end %>
      </tbody>
</table>
