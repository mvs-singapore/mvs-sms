<div class="container">
  <h1 class="display-4 mt-5"><%= @resource.name %></h1>
  <div class="row">
    <div class="col-9">
      <h3 class="pt-4 pb-1"><%= @resource.address %> <%= @resource.postal_code %></h3>
    </div>
    <div class="col-3 pt-3 pb-2 text-right">
      <%= link_to '<i class="fa fa-pencil"></i> Edit'.html_safe, edit_internship_company_path(@resource), class: "edit_internship_comapny btn btn-primary" %>
      <%= link_to '<i class="fa fa-trash"></i> Delete'.html_safe, internship_company_path(@resource), method: :delete, data: {confirm: 'Are you sure?'}, class: "delete_internship_company btn btn-danger" %>
    </div>
  </div>

<br>

<h4>Supervisor List</h4>
<table class="table table-bordered">
  <thead class="table-primary">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Contact Number</th>
    </tr>
  </thead>
  <tbody class="bg-white">
        <% @resource.internship_supervisors.each do |supervisor| %>
          <tr id="supervisor-<%= supervisor.id %>">
            <td><%= supervisor.name %></td>
            <td><%= supervisor.email %></td>
            <td><%= supervisor.contact_number %></td>
          </tr>
        <% end %>
      </tbody>
</table>

<br>

<h4>Students Assigned List</h4>
<table class="table table-bordered">
  <thead class="table-primary">
    <tr>
      <th>Student Name</th>
      <th>Supervisor Name</th>
      <th>From Date</th>
      <th>To Date</th>
    </tr>
  </thead>
  <tbody class="bg-white">
        <% @resource.internship_records.each do |record| %>
          <tr id="student-<%= record.student.id %>">
            <td><%= record.student.full_name %></td>
            <td><%= record.internship_supervisor.name %></td>
            <td><%= record.from_date %></td>
            <td><%= record.to_date %></td>
          </tr>
        <% end %>
      </tbody>
</table>
</div>
