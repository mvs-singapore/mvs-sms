<div class="form-group row">
  <div class="col-6">
    <%= f.label :event_date, 'Event Date' %>
    <%= f.date_field :event_date, autofocus: true, class: 'form-control' %>
  </div>

  <div class="col-6">
    <%= f.label :category, 'Category' %>
    <%= f.text_field :category, autofocus: true, class: 'form-control' %>
  </div>

  <div class="col-6">
    <%= f.label :details %>
    <%= f.text_field :details, autofocus: true, class: 'form-control' %>
  </div>
</div>

<div class="form-group row">
  <div class="col-4"><%= f.submit :class => 'btn btn-primary' %></div>
</div>
