<div class="form-group row justify-content-center">
  <div class="col-6">
    <%= f.label :name, 'Supervisor Name' %>
    <%= f.text_field :name, autofocus: true, class: 'form-control' %>
  </div>

  <div class="col-6">
    <%= f.label :email %>
    <%= f.email_field :email, class: 'form-control' %>
  </div>
</div>

<div class="form-group row justify-content-center">
  <div class="col-6">
    <%= f.label :contact_number, 'Contact Number' %>
    <%= f.text_field :contact_number, class: 'form-control' %>
  </div>

  <div class="col-6">
    <%= f.label :internship_company_id, 'Internship Company' %>
    <%= f.collection_select :internship_company_id, InternshipCompany.all, :id, :name, {prompt: 'Select Company'}, class: 'form-control'%>
  </div>
</div>

<div class="form-group">
    <%= f.submit :class => 'btn btn-primary' %>
</div>
