<div class="container">
  <div class="row justify-content-end mt-5 mb-4">
    <div class="col-4">
      <h3 class="text-center">Manage Classes</h3>
    </div>
    <div class="col-4 text-right">
      <%= link_to '<i class="fa fa-plus"></i> Add Class'.html_safe, new_admin_school_class_path, class: 'btn btn-primary' %>
    </div>
  </div>

<table class="table table-bordered">
  <thead class="table-primary">
    <tr>
      <th>Academic Year</th>
      <th>Name</th>
      <th>Year</th>
      <th>Form Teacher</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody class="bg-white">
    <%= render partial: 'admin/school_classes/shared/school_class_row', collection: @resources, as: :school_class %>
  </tbody>
</table>
</div>
