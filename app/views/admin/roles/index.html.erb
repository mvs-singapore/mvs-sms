<h3>Manage Roles</h3>

<p><%= link_to('Add Role', new_admin_role_path, class: "btn btn-primary") %></p>

<table class="table table-bordered table-responsive">
  <thead class="table-primary">
    <tr>
      <th>Role</th>
      <th>Created at</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody class="bg-white">
  <% @roles.each do |role| %>
    <tr id="role-<%= role.id %>">
      <td><%= role.name %></td>
      <td><%= role.created_at %></td>
      <td>
        <%= link_to 'Edit', edit_admin_role_path(role), class: "edit_role btn btn-primary" %>
        <%= link_to 'Delete', admin_role_path(role), method: :delete, data: { confirm: 'Are you sure?' }, class: "delete_role btn btn-danger" %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>