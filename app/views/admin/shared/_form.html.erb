<div class="form-group row justify-content-center">
  <div class="col-4">
    <%= f.label :name %>
    <%= f.text_field :name, autofocus: true, class: 'form-control' %>
  </div>
</div>

<div class="form-group row justify-content-center">
  <div class="col-4">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, class: 'form-control' %>
  </div>
</div>

<div class="form-group row justify-content-center">
  <div class="col-4">
    <%= f.label :role %>
    <%= f.select :role, User.roles.keys, {prompt: 'Select Role'}, class: 'form-control'%>

  </div>
</div>

<div class="form-group row justify-content-center">
  <div class="col-4">
    <%= f.submit :class => 'btn btn-primary' %>
  </div>
</div>
