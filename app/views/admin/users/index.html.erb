<h3>Manage Users</h3>

<%= link_to('Add User', new_admin_user_path, class: "btn btn-primary") %>

    <table class="table table-bordered table-responsive">
      <thead>
        <tr>
          <th>#</th>
          <th>User</th>
          <th>Role</th>
          <th>Created at</th>
          <th>Last Login</th>
          <th>Edit User</th>
          <th>Delete User</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
        <tr>
          <th scope="row"></th>
          <td><%= user.name %></td>
          <td><%= user.role.name %></td>
          <td><%= user.created_at %></td>
          <td><%= user.last_sign_in_at %></td>
          <td><%= link_to 'Edit', edit_admin_user_path(user), class: "edit_user btn btn-primary" %></td>
          <td><%= link_to 'Delete', admin_user_path(user), method: :delete, data: { confirm: 'Are you sure?' }, class: "delete_user btn btn-danger" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
