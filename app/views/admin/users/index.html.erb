<div class="container">
  <div class="row justify-content-end mt-5 mb-4">
    <div class="col-6 offset-md-3">
      <h3 class="text-center">Manage Users</h3>
    </div>
    <div class="col-3 text-right">
      <%= link_to '<i class="fa fa-plus"></i> Add User'.html_safe, new_admin_user_path, class: "btn btn-primary" %>
    </div>
  </div>

    <table class="table table-bordered">
      <thead class="table-primary">
        <tr>
          <th>User</th>
          <th>Role</th>
          <th>Created at</th>
          <th>Last Login</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody class="bg-white">
        <% @resources.each do |user| %>
          <tr>
            <td><%= link_to "#{user.name}", edit_admin_user_path(user), class: 'edit_user' %></td>
            <td><%= user.role.name %></td>
            <td><%= user.created_at %></td>
            <td><%= user.last_sign_in_at %></td>
            <td>
              <%= link_to 'Delete', admin_user_path(user), method: :delete, data: { confirm: 'Are you sure?' }, class: "delete_user btn btn-danger" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
