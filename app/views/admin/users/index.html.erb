<h3>Manage Users</h3>

<p><%= link_to('Add User', new_admin_user_path, class: "btn btn-primary") %></p>

    <table class="table table-bordered table-responsive">
      <thead class="table-primary">
        <tr>
          <th>User</th>
          <th>Role</th>
          <th>Created at</th>
          <th>Last Login</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody class="bg-white">
        <% @users.each do |user| %>
          <tr>
            <td><%= user.name %></td>
            <td><%= user.role.name %></td>
            <td><%= user.created_at %></td>
            <td><%= user.last_sign_in_at %></td>
            <td>
              <%= link_to 'Edit', edit_admin_user_path(user), class: "edit_user btn btn-primary" %>
              <%= link_to 'Delete', admin_user_path(user), method: :delete, data: { confirm: 'Are you sure?' }, class: "delete_user btn btn-danger" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
