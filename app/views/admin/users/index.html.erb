<div class="container">
  <div class="row justify-content-end mt-5 mb-4">
    <div class="col-6 offset-md-3">
      <h3 class="text-center">Manage Users</h3>
    </div>
    <div class="col-3 text-right">
      <%= link_to '<i class="fa fa-plus"></i> Add User'.html_safe, new_admin_user_path, class: "btn btn-primary" %>
    </div>
  </div>

    <table class="table table-bordered">
      <thead class="table-primary">
        <tr>
          <th>User</th>
          <th>Role</th>
          <th>Created at</th>
          <th>Last Login</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody class="bg-white">
        <%= render partial: 'admin/users/shared/user_row', collection: @resources, as: :user %>
      </tbody>
    </table>
  </div>
